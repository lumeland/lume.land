{
  "imports": {
    "lume/": "https://deno.land/x/lume@v3.0.10/",
    "lume/jsx-runtime": "https://deno.land/x/ssx@v0.1.12/jsx-runtime.ts"
  },
  "lock": false,
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "lume",
    "types": [
      "lume/types.ts"
    ]
  },
  "tasks": {
    "build": "deno task lume",
    "serve": "deno task lume -s",
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -"
  },
  "lint": {
    "exclude": [
      "./_site"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-import-prefix"
      ]
    },
    "plugins": [
      "https://deno.land/x/lume@v3.0.10/lint.ts"
    ]
  },
  "fmt": {
    "exclude": [
      "./_site"
    ]
  },
  "unstable": [
    "temporal",
    "fmt-component"
  ]
}
